[flake8]
max-line-length = 100
max-complexity = 10
select = E,W,F,C
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    .env,
    venv,
    env,
    .pytest_cache,
    .coverage,
    htmlcov,
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
    tests/*.py:F401,F811
